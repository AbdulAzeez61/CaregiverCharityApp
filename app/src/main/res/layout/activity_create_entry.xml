<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.entries.CreateEntry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="ExtraText,UselessParent">

        <TextView
            android:id="@+id/SetUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set up Campaign" />

        <TextView
            android:id="@+id/campaignTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campaign Type" />

        <EditText
            android:id="@+id/campaignType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Enter campaign type"
            android:inputType="text"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campaign Title" />

        <EditText
            android:id="@+id/campaignTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Enter campaign Title"
            android:inputType="text"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campaign Goal"
            android:id="@+id/goal"/>

        <EditText
            android:id="@+id/campaignGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Enter campaign Goal"
            android:inputType="number"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing date"
            android:id="@+id/date"/>

        <EditText
            android:id="@+id/campaignclosingdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Enter closing date"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/campaignDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/selectImagesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Images" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Setup Campaign" />


    </LinearLayout>
</LinearLayout>